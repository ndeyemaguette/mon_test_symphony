{% extends 'base.html.twig' %}

{% block body %}
    <h3>Formulaire de cr√©artion d'un carnet</h3>

    {% for type, messages in app.session.flashbag.all() %}
    {% for message in messages %}
        <p class="information_message">{{ message }}<p>
    {% endfor %}
    {% endfor %}
    
    <div class="well">
        <form method="post" action="{{ path('carnet_adresse_edit', { 'id': carnet.id }) }}" {{ form_enctype(form) }}>
            <table>
                <tr>
                <td align="right">{{ form_label(form.contact, "Contact") }} <span class="blue" style="color: red">*</span></td>
                <td colspan="5">{{ form_widget(form.contact) }}</td>
                </tr>
                <tr><td></td><td colspan="5">{{ form_errors(form.contact) }}</td></tr>
                
                <tr>
                <td align="right">{{ form_label(form.libelle, "Titre du carnet") }} <span class="blue" style="color: red">*</span></td>
                <td colspan="5">{{ form_widget(form.libelle) }}</td>
                </tr>
                <tr><td></td><td colspan="5">{{ form_errors(form.libelle) }}</td></tr>
                
                <tr>
                <td align="right">{{ form_label(form.dateContact, "Date de rendez-vous") }} <span class="blue" style="color: red">*</span></td>
                <td colspan="5">{{ form_widget(form.dateContact) }}</td>
                </tr>
                <tr><td></td><td colspan="5">{{ form_errors(form.dateContact) }}</td></tr>
                
                <tr><td>&nbsp;</td><td colspan="5"><input type="submit" value="Valider" /></td></tr>
                <tr><td>&nbsp;</td><td colspan="5" align="right" class="obligation"><span style="color: red">* champ obligatoire</span></td></tr>
                <td colspan="5">{{ form_rest(form) }}</td>
            
            </table>
        </form>
    </div>
{% endblock %}
