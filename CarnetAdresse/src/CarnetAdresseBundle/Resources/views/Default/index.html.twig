{% extends 'base.html.twig' %}

{% block body %}
    <h3>Liste des Carnets</h3>
    
    <div class="well">
        <table>
             <tr>
                <th>Numéro</th>
                <th></th>
                <th>Titre du carnet</th>
                <th></th>
                <th>Date de rendez vous</th>
                <th></th>
                <th>Contact</th>
                <th></th>
                <th>Nom Contact</th>
                <th></th>
                <th>Prenom Contact</th>
                <th></th>
                <th>Téléphone Contact</th>
                <th></th>
                <th>Email Contact</th>
             </tr>
            {% for a in carnets %}
                <tr>
                    <td>{{ a.id }}</td>
                    <td></td>
                    <td>{{ a.libelle }}</td>
                    <td></td>
                    <td>{{ a.date|date('d/m/Y') }}</td>
                    <td></td>
                    <td>{{ a.contact.nom }} {{ a.contact.prenom }}</td>
                    <td></td>
                    <td>{{ a.contact.nom }}</td>
                    <td></td>
                    <td>{{ a.contact.prenom }}</td>
                    <td></td>
                    <td>{{ a.contact.telephone }}</td>
                    <td></td>
                    <td>{{ a.contact.email }}</td>
                    <td></td></tr>
            {% else %}
                <tr><td>Aucun carnet n'a été trouvé.</td></tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
